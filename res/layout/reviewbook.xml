<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal">
  <ImageView
  	android:id="@+id/_ReviewBook_BookImage"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:src="@drawable/nocover"></ImageView>
  <Spinner
  	android:id="@+id/_ReviewBook_ShelfSpinner"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"></Spinner>
  	<RatingBar
  		android:id="@+id/_ReviewBook_Rating"
  		android:numStars="5"
  		android:stepSize="1"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"></RatingBar>
		<TextView
			android:id="@+id/_ReviewBook_DateRead"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="Date Read:\t1980-01-01"></TextView>
		<Button
			android:id="@+id/_ReviewBook_DatePickerButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Pick Date Read"></Button>
	<TextView
		android:id="@+id/_ReviewBook_ReviewLabel"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Review"></TextView>
	<EditText
		android:id="@+id/_ReviewBook_Review"
		android:gravity="top"
		android:layout_height="0px"
		android:layout_width="fill_parent"
		android:layout_weight="1"></EditText>
	<Button
		android:id="@+id/_ReviewBook_SubmitButton"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Save"></Button>
</LinearLayout>
